<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/cheese_level_bg"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/txt_you_lose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Cheese Level "
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgCheeseLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_you_lose"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/cheese_left"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgCheeseRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_you_lose"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-20dp"
            android:background="@drawable/cheese_right"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_cheese_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_you_lose"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Answer the question correctly and win your "
            android:textColor="#f8f500"
            android:textSize="21sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnTryAgain"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_below="@id/txt_cheese_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_try_again_bg"
            android:text="GO!"
            android:textColor="#0028BA"
            android:textSize="23sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/logo_yellow" />

</FrameLayout>